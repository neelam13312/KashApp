    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">7pt</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="textAllCaps">true</item>
        <item name="android:width">180dp</item>
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="fontFamily">@font/sfui_bold</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/space_10</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
<!--        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflowStyle</item>-->
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
    </style>
    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <!--        <item name="android:gravity">top</item>-->
        <!--        <item name="android:layout_gravity">top</item>-->
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
        <style name="Theme.GDMatkaLive.NoActionBar">
                <item name="windowActionBar">false</item>
                <item name="windowNoTitle">true</item>
        </style>
        <style name="Theme.GDMatkaLive.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
        <style name="Theme.GDMatkaLive.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="RightButtonsDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:buttonBarButtonStyle">@style/RightButtonBarButtonStyle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="RightButtonBarButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:gravity">end</item>
    </style>
    <style name="MyTextview_semibold">
        <item name="fontFamily">@font/sfui_semibold</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">7pt</item>
    </style>
    <style name="MyTextview_semibold_small" >
        <item name="fontFamily">@font/sfui_semibold</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/tv_small_normal_6</item>
    </style>
    <style name="MyTextview_title" >
        <item name="fontFamily">@font/sfui_semibold</item>

        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:padding">@dimen/tv_all_padding2</item>
        <item name="android:textSize">7pt</item>

        <item name="android:layout_margin">@dimen/tv_margin</item>
    </style>
    <style name="MyTextview_bold_login12pt">
        <item name="fontFamily">@font/sfui_bold</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12pt</item>
    </style>
    <style name="MyTextview_bold">
        <item name="fontFamily">@font/sfui_bold</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">9pt</item>
    </style>
    <style name="texttheme">
        <item name="fontFamily">@font/sfui_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">7pt</item>
    </style>

    <style name="MyTextview_titleBlack">
        <item name="fontFamily">@font/sfui_semibold</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/all_tvsize_7pt</item>
    </style>

    <style name="MyeditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginTop">@dimen/space_4</item>
        <item name="android:layout_marginBottom">@dimen/space_4</item>
        <item name="android:layout_marginEnd">@dimen/space_3</item>
        <item name="android:layout_marginStart">@dimen/space_3</item>
        <item name="android:textSize">@dimen/all_tvsize_7pt</item>
        <item name="android:textColorHint">@color/edittext_hint</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="android:padding">@dimen/edittext_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:minWidth">250dp</item>
        <item name="colorControlActivated">@color/colorPrimary</item>

    </style>
    <style name="bid_autoText" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:fontFamily">@font/sfui_regular</item>
        <item name="background">@drawable/bg_digit_shape</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
    <style name="HintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="fontFamily">@font/sfui_semibold</item>
        <item name="android:textSize">@dimen/space_6</item>
        <!-- floating hint text size -->
    </style>
    <style name="EditTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:layout_margin">@dimen/space_10</item>
        <item name="android:textColorHint">@color/edittext_hint</item>
        <item name="hintTextColor">@color/edittext_hint</item>
        <item name="hintTextAppearance">@style/TextLabel</item>

        <item name="boxCornerRadiusTopEnd">@dimen/box_raddius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/box_raddius</item>
        <item name="boxCornerRadiusTopStart">@dimen/box_raddius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/box_raddius</item>
        <item name="expandedHintEnabled">false</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <!--        <item name="android:layout_width">match_parent</item>-->
        <item name="boxStrokeWidth">2dp</item>

        <!--        <item name="android:layout_height">@dimen/space_edittext</item>-->
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>


        <!--        <item name="hintAnimationEnabled">false</item>-->
        <!--        <item name="hintEnabled">true</item>-->
        <!--        <item name="boxBackgroundMode">outline</item>-->


    </style>    --  this style for the hint text lable in textInputLayout -->
    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/all_tvsize_7pt</item>
        <item name="hintTextColor">@color/edittext_hint</item>
    </style>
    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="fontFamily">@font/sfui_bold</item>
        <item name="android:textSize">@dimen/tv_small_normal_6</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="fontFamily">@font/sfui_bold</item>
        <item name="android:textSize">@dimen/tv_small_normal_6</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item></style>

    <dimen name="button_height">30dp</dimen>

    <style name="mycheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/all_tvsize_7pt</item>
        <item name="fontFamily">@font/sfui_semibold</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="buttonTint">@color/colorPrimary</item>
    </style>
</resources>
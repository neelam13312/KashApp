<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
     <style name="Theme.GDMatkaLive" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
         <item name="windowNoTitle">true</item>

         <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/button</item>
        <item name="android:textViewStyle">@style/texttheme</item>
         <item name="editTextStyle">@style/MyeditText</item>
         <item name="checkboxStyle">@style/mycheckbox</item>

         <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="ToolbarColoredBackArrow" parent="Theme.GDMatkaLive">
        <!--        <item name="android:textColorSecondary">@color/colorPrimary</item>-->
        <item name="android:background">@color/colorPrimary</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>



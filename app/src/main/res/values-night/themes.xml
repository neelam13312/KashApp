<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GDMatkaLive" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/button</item>
        <item name="android:textViewStyle">@style/texttheme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="ToolbarColoredBackArrow" parent="Theme.GDMatkaLive">
        <!--        <item name="android:textColorSecondary">@color/colorPrimary</item>-->
        <item name="android:background">@color/colorPrimary</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="texttheme" parent="Widget.AppCompat.TextView">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>

        <item name="fontFamily">@font/montserratextrabold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_bg</item>
        <item name="textAllCaps">true</item>
        <item name="android:width">180dp</item>
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="height">37dp</item>
        <item name="fontFamily">@font/montserratextrabold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <!--        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflowStyle</item>-->
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
    </style>
    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <!--        <item name="android:gravity">top</item>-->
        <!--        <item name="android:layout_gravity">top</item>-->
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="Theme.GDMatkaLive.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GDMatkaLive.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GDMatkaLive.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Mytextcolor" parent="@android:style/TextAppearance.Medium">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="fontFamily">@font/montserratextrabold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RightButtonsDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:buttonBarButtonStyle">@style/RightButtonBarButtonStyle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="RightButtonBarButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:gravity">end</item>
    </style>
</resources>
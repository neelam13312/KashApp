<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
            android:id="@+id/card_notification"
            android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white_smoke"
            android:background="@drawable/bg_round_with_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_margin="@dimen/space_8"
                android:id="@+id/relBack"
                android:layout_alignParentStart="true"
                android:backgroundTint="#C8E2F1"
                android:background="@drawable/bg_cart_circle"
                android:layout_width="45dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@drawable/notification"
                    app:tint="@color/colorPrimary">

                </ImageView>

            </RelativeLayout>
            <LinearLayout
                android:layout_toEndOf="@+id/relBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    style="@style/MyTextview_semibold"
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title" />
                <TextView

                    android:id="@+id/tv_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@string/name"
                    />
                <TextView
                    android:layout_margin="@dimen/space_5"
                    android:layout_gravity="end"
                    android:textSize="@dimen/tv_small_normal_6"
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    android:text="@string/time"/>
            </LinearLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>



</RelativeLayout>
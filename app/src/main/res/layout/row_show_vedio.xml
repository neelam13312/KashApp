<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.cardview.widget.CardView
                android:layout_margin="@dimen/space_10dp"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                                android:id="@+id/lin_1"
                                android:background="@color/colorPrimary"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="25dp">
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tv_title"
                                        android:padding="5dp"
                                        android:textAlignment="center"
                                        android:textStyle="bold"

                                         style="@style/MyTextview_semibold_small"
                                        android:textAllCaps="false"
                                        android:text="Title"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                </TextView>
                                <RelativeLayout
                                        android:id="@+id/rel_img"
                                        android:layout_width="match_parent"
                                        android:layout_height="92dp"
                                        android:layout_margin="6dp">

                                        <RelativeLayout
                                                android:id="@+id/rel_btn_live"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                   android:layout_centerInParent="true"                                                android:layout_margin="10dp"
                                                android:elevation="10dp"
                                                android:gravity="center"
                                                android:padding="@dimen/space_5"
                                                android:visibility="visible">

                                                <ImageView
                                                        android:id="@+id/iv_play"
                                                        android:layout_width="30dp"
                                                        android:layout_height="30dp"
                                                        android:layout_alignParentTop="true"
                                                        android:layout_centerInParent="true"
                                                        android:gravity="center"
                                                        android:src="@drawable/btn_play" />

                                                <TextView
                                                        android:id="@+id/tv_new"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_below="@id/iv_play"
                                                        android:gravity="center"
                                                        android:padding="5dp"
                                                        android:text="Play Video"
                                                        android:textColor="@color/white"
                                                         style="@style/MyTextview_semibold_small"
                                                        android:textStyle="bold"
                                                        app:drawableTint="@color/white" />

                                        </RelativeLayout>

                                        <com.makeramen.roundedimageview.RoundedImageView
                                            android:id="@+id/imgCourse"
                                            android:layout_width="223dp"
                                            android:layout_height="102dp"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/bg_round_with_border"
                                            android:scaleType="fitXY"
                                            android:src="@color/gray"
                                            app:riv_corner_radius="12dp" />





                                </RelativeLayout>
                                <TextView
                                    android:id="@+id/tv_description"
                                        android:padding="5dp"
                                        android:textAlignment="center"
                                        android:textColor="@color/gray"
                                         style="@style/MyTextview_semibold_small"
                                        android:textAllCaps="false"
                                        android:text="discription"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                </TextView>

                        </LinearLayout>
                </LinearLayout>


        </androidx.cardview.widget.CardView>

</RelativeLayout>
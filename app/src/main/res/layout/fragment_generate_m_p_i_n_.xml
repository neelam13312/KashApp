<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.GenerateMPIN_Fragment">
    <include layout="@layout/bg_withouttext_layout"/>
    <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_margin="20dp"
                android:id="@+id/change_mpin"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="6dp"
                android:backgroundTint="@color/single_digit"
                android:background="@drawable/bg_rounded_edge_10dp"
                android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_change"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:padding="4dp"
                    android:backgroundTint="@color/card6"
                    android:background="@drawable/bg_cart_circle"
                    android:src="@drawable/ic_forgot" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_change"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Change MPIN"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                   />
        </RelativeLayout>
        <RelativeLayout
                android:layout_margin="20dp"
                android:id="@+id/forgot_mpin"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="6dp"
                android:backgroundTintMode="multiply"
                android:backgroundTint="@color/card3"
                android:background="@drawable/bg_rounded_edge_10dp"
                android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_forgot"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:padding="4dp"
                    android:backgroundTint="@color/purple"
                    android:background="@drawable/bg_cart_circle"
                    android:src="@drawable/ic_forgot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_forgot"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"

                android:text="Forgot Mpin"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
       android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/card_shape"
        android:backgroundTint="@color/white"
        android:elevation="5dp"
        android:layout_margin="5dp">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/generate_mpin"
            android:textSize="16dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>




</RelativeLayout>
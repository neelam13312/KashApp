<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="@drawable/bg_round_with_border"
    android:orientation="vertical">
    <RelativeLayout
            android:id="@+id/rel_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="end"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:background="@drawable/ic_close"
                app:tint="@color/black">

        </ImageView>

        <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="Name"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                 />
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_cancel"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="day"
                android:textAlignment="center"
                android:textAllCaps="true"


                 />

        <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="day"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"

                 />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

            <LinearLayout
                    android:padding="4dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_common"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight=".5"


                        android:gravity="center"
                        android:padding="10dp"

                        android:text="@string/open"
                        android:textAlignment="center"

                        android:textSize="12sp" />

                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimaryDark">

                </View>

                <TextView
                        android:id="@+id/tv_ores_time"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight=".5"


                        android:gravity="center"
                    android:paddingVertical="10dp"

                        android:text="Open Result Time"
                        android:textAlignment="center"

                        android:textSize="12sp" />

                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimaryDark">

                </View>

                <TextView
                    android:id="@+id/tv_openLastTime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight=".5"
                        android:gravity="center"
                         android:paddingVertical="10dp"
                        android:text="Open Bid Last Time"
                        android:textAlignment="center"

                        android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                    android:padding="4dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_common"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight=".5"


                        android:gravity="center"
                        android:padding="10dp"

                        android:text="@string/close"
                        android:textAlignment="center"

                        android:textSize="12sp" />

                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimaryDark">

                </View>

                <TextView
                        android:id="@+id/tv_cres_time"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight=".5"


                        android:gravity="center"
                    android:paddingVertical="10dp"

                        android:text="Close Result Time"
                        android:textAlignment="center"

                        android:textSize="12sp" />

                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimaryDark">

                </View>

                <TextView
                        android:id="@+id/tv_closeLastTime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:text="Close Bid Last Time"
                        android:textAlignment="center"

                        android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
android:layout_margin="10dp"


                android:text="Ok"

                />

    </LinearLayout>
</RelativeLayout>
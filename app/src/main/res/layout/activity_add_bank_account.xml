<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Activity.AddBankAccountActivity">
        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <include
                            android:id="@+id/toolbar"
                            layout="@layout/app_bar_common">
                        </include>

                        <RelativeLayout
                            android:visibility="gone"
                            android:id="@+id/rel_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/toolbar">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="20dp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:padding="6dp"
                                            android:text="Bank Details"
                                            android:textAlignment="viewStart"
                                            android:textAllCaps="false"

                                             />


                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:padding="10dp"

                                            >

                                                <ImageView
                                                    android:id="@+id/logo"
                                                    android:layout_width="100dp"
                                                    android:layout_height="100dp"
                                                    android:layout_centerHorizontal="true"
                                                    android:layout_marginBottom="10dp"
                                                    android:background="@drawable/bank_circle"
                                                    android:visibility="gone" />

                                                <EditText
                                                    android:id="@+id/et_hname"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="60dp"
                                                    android:layout_below="@id/logo"
                                                    android:layout_marginStart="10dp"
                                                    android:layout_marginTop="10dp"
                                                    android:layout_marginEnd="10dp"
                                                    android:layout_marginRight="10dp"
                                                    android:layout_marginBottom="10dp"
                                                    android:background="@drawable/edit_bg"
                                                    android:hint="Account Holder Name"
                                                    android:inputType="text"
                                                    android:paddingLeft="20dp"
                                                    android:textColor="@color/textcolor"
                                                    android:textColorHint="@color/black"
                                                    android:textSize="18dp" />

                                                <EditText
                                                    android:id="@+id/et_accno"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="60dp"

                                                    android:layout_below="@id/et_hname"
                                                    android:layout_marginStart="10dp"
                                                    android:layout_marginTop="10dp"
                                                    android:layout_marginEnd="10dp"
                                                    android:layout_marginRight="10dp"
                                                    android:layout_marginBottom="10dp"
                                                    android:background="@drawable/edit_bg"
                                                    android:hint="Account No."
                                                    android:inputType="number"
                                                    android:paddingLeft="20dp"

                                                    android:textColorHint="@color/black"
                                                    android:textSize="18dp" />


                                                <EditText
                                                    android:id="@+id/et_ifsc"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="60dp"
                                                    android:layout_below="@id/et_accno"
                                                    android:layout_marginStart="10dp"
                                                    android:layout_marginTop="10dp"
                                                    android:layout_marginEnd="10dp"
                                                    android:layout_marginRight="10dp"
                                                    android:layout_marginBottom="10dp"
                                                    android:background="@drawable/edit_bg"
                                                    android:hint="IFSC Code"
                                                    android:inputType="text"
                                                    android:paddingLeft="20dp"
                                                    android:textColor="@color/textcolor"
                                                    android:textColorHint="@color/black"
                                                    android:textSize="18dp" />

                                                <EditText
                                                    android:id="@+id/et_bankname"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="60dp"
                                                    android:layout_below="@id/et_ifsc"
                                                    android:layout_marginStart="10dp"
                                                    android:layout_marginTop="10dp"
                                                    android:layout_marginEnd="10dp"
                                                    android:layout_marginRight="10dp"
                                                    android:layout_marginBottom="10dp"
                                                    android:background="@drawable/edit_bg"

                                                    android:hint="Bank Name"

                                                    android:paddingLeft="20dp"

                                                    android:textColorHint="@color/black"
                                                    android:textSize="18dp" />

                                                <EditText
                                                    android:id="@+id/et_branchname"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="60dp"
                                                    android:layout_below="@id/et_bankname"
                                                    android:layout_marginStart="10dp"
                                                    android:layout_marginTop="10dp"
                                                    android:layout_marginEnd="10dp"
                                                    android:layout_marginRight="10dp"
                                                    android:layout_marginBottom="10dp"
                                                    android:background="@drawable/edit_bg"

                                                    android:hint="Branch Name"

                                                    android:paddingLeft="20dp"

                                                    android:textColorHint="@color/black"
                                                    android:textSize="18dp" />



                                        </RelativeLayout>

                                        <Button
                                            android:id="@+id/btn_bank"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="20dp"
                                            android:background="@drawable/button_bg"
                                            android:gravity="center"
                                            android:padding="10dp"
                                            android:text="Add Bank Details"


                                            />

                                </LinearLayout>

                        </RelativeLayout>
                        <RelativeLayout
                            android:visibility="gone"
                            android:id="@+id/rel_data"
                            android:layout_marginTop="40dp"
                            android:layout_below="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                                <LinearLayout

                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                        <androidx.cardview.widget.CardView
                                            app:cardBackgroundColor="@color/lightest"
                                            android:layout_width="match_parent"
                                            android:layout_marginRight="@dimen/space_30"
                                            android:layout_marginLeft="@dimen/space_30"
                                            app:cardCornerRadius="@dimen/space_5"
                                            android:layout_height="wrap_content">
                                                <LinearLayout
                                                    android:weightSum="2"
                                                    android:orientation="horizontal"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content">
                                                        <RadioButton
                                                            android:checked="true"
                                                            android:layout_gravity="center"
                                                            android:layout_weight=".2"
                                                            android:layout_width="0dp"
                                                            android:layout_height="match_parent"/>
                                                        <LinearLayout
                                                            android:layout_weight="1.8"
                                                            android:layout_width="0dp"
                                                            android:orientation="vertical"
                                                            android:layout_height="wrap_content">
                                                                <LinearLayout

                                                                    android:id="@+id/lin_game"
                                                                    android:layout_gravity="center"
                                                                    android:gravity="center"
                                                                    android:orientation="vertical"
                                                                    android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content"

                                                                    >

                                                                        <LinearLayout
                                                                            android:padding="5dp"
                                                                            android:orientation="horizontal"
                                                                            android:layout_width="match_parent"
                                                                            android:weightSum="2"
                                                                            android:layout_gravity="center"
                                                                            android:gravity="center"
                                                                            android:layout_height="wrap_content"
                                                                            >
                                                                                <TextView
                                                                                    android:layout_gravity="center"
                                                                                    android:gravity="left"
                                                                                    android:textStyle="bold"
                                                                                    android:layout_weight="1"
                                                                                    android:layout_width="0dp"
                                                                                    android:layout_height="wrap_content"
                                                                                    android:text="Account Holder Name"

                                                                                    android:textSize="@dimen/space_12" />
                                                                                <TextView
                                                                                    android:id="@+id/tv_hod"
                                                                                    android:layout_gravity="center"
                                                                                    android:gravity="start"
                                                                                    android:layout_weight="1"
                                                                                    android:layout_width="0dp"
                                                                                    android:layout_height="wrap_content"
                                                                                    android:text="mode"
                                                                                    android:textAlignment="viewStart"

                                                                                    android:textColor="@color/gray"
                                                                                    android:textSize="@dimen/space_12" />

                                                                        </LinearLayout>

                                                                        <LinearLayout
                                                                            android:padding="5dp"
                                                                            android:orientation="horizontal"
                                                                            android:layout_width="match_parent"
                                                                            android:weightSum="2"
                                                                            android:layout_height="wrap_content"
                                                                            >
                                                                                <TextView
                                                                                    android:textStyle="bold"
                                                                                    android:layout_gravity="center"
                                                                                    android:gravity="left"
                                                                                    android:layout_weight="1"
                                                                                    android:layout_width="0dp"
                                                                                    android:layout_height="wrap_content"
                                                                                    android:text="Bank Name"

                                                                                    android:textSize="12dp" />
                                                                                <TextView
                                                                                    android:id="@+id/tv_bank"
                                                                                    android:layout_gravity="center"
                                                                                    android:gravity="start"
                                                                                    android:layout_weight="1"
                                                                                    android:textAlignment="viewStart"

                                                                                    android:layout_width="0dp"
                                                                                    android:layout_height="wrap_content"
                                                                                    android:text="mode"

                                                                                    android:textSize="@dimen/space_12" />

                                                                        </LinearLayout>
                                                                        <LinearLayout
                                                                            android:padding="5dp"
                                                                            android:orientation="horizontal"
                                                                            android:layout_width="match_parent"
                                                                            android:weightSum="2"
                                                                            android:layout_height="wrap_content"
                                                                            >
                                                                                <TextView
                                                                                    android:textStyle="bold"
                                                                                    android:layout_gravity="center"
                                                                                    android:gravity="left"
                                                                                    android:layout_weight="1"
                                                                                    android:layout_width="0dp"
                                                                                    android:layout_height="wrap_content"
                                                                                    android:text="Account No."

                                                                                    android:textSize="12dp" />
                                                                                <TextView
                                                                                    android:id="@+id/tv_acc"
                                                                                    android:layout_gravity="center"
                                                                                    android:gravity="start"
                                                                                    android:layout_weight="1"
                                                                                    android:textAlignment="viewStart"
                                                                                    android:layout_width="0dp"
                                                                                    android:layout_height="wrap_content"
                                                                                    android:text="mode"
                                                                                    android:textColor="@color/gray"
                                                                                    android:textSize="@dimen/space_12" />

                                                                        </LinearLayout>
                                                                        <LinearLayout
                                                                            android:padding="5dp"
                                                                            android:orientation="horizontal"
                                                                            android:layout_width="match_parent"
                                                                            android:weightSum="2"
                                                                            android:layout_height="wrap_content"
                                                                            >
                                                                                <TextView
                                                                                    android:textStyle="bold"
                                                                                    android:layout_gravity="center"
                                                                                    android:gravity="left"
                                                                                    android:layout_weight="1"
                                                                                    android:layout_width="0dp"
                                                                                    android:layout_height="wrap_content"
                                                                                    android:text="IFSC Code"

                                                                                    android:textSize="@dimen/space_12" />
                                                                                <TextView
                                                                                    android:id="@+id/tv_ifsc"
                                                                                    android:layout_gravity="center"
                                                                                    android:gravity="start"
                                                                                    android:layout_weight="1"
                                                                                    android:textAlignment="viewStart"

                                                                                    android:layout_width="0dp"
                                                                                    android:layout_height="wrap_content"
                                                                                    android:text="mode"
                                                                                    android:textColor="@color/gray"
                                                                                    android:textSize="@dimen/space_12" />

                                                                        </LinearLayout>

                                                                </LinearLayout>
                                                        </LinearLayout>
                                                </LinearLayout>
                                        </androidx.cardview.widget.CardView>
                                        <TextView
                                            android:layout_marginTop="@dimen/space_20"
                                            android:textAlignment="center"
                                            android:id="@+id/tv_ver"
                                            android:drawableStart="@drawable/ic_baseline_check_circle_24"
                                            android:textColor="@color/green"
                                            android:layout_gravity="center"
                                            android:drawablePadding="@dimen/space_20"
                                            android:drawableTint="@color/green"
                                            android:text="Verified bank details"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                        <Button
                                            android:id="@+id/btn_change"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="20dp"
                                            android:background="@drawable/button_bg"
                                            android:gravity="center"
                                            android:padding="10dp"
                                            android:text="Change Bank" />

                                </LinearLayout>
                        </RelativeLayout>
                </RelativeLayout>
        </ScrollView>
</RelativeLayout>
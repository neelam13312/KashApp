<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_margin="@dimen/space_5"
            android:layout_centerHorizontal="true"
                android:id="@+id/lin_game"
                android:layout_width="130dp"
                android:layout_height="130dp"
            android:gravity="center_horizontal"
                android:background="@drawable/bg_round_with_border"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_margin="@dimen/space_4"
                        android:id="@+id/rel_selectgame"
                        android:layout_width="match_parent"
                               android:layout_height="70dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="5dp">

                        <ImageView

                            android:id="@+id/iv_selectgame"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:src="@drawable/statement">

                        </ImageView>

                </RelativeLayout>
                <LinearLayout
                    android:layout_margin="@dimen/space_5"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <TextView
                            style="@style/MyTextview_semibold_small"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/tv_gameName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/name"
                             />

                        <View
                            android:visibility="gone"
                            android:id="@+id/view"
                            android:layout_width="35dp"
                            android:layout_height="4dp"
                            android:layout_alignParentBottom="true"

                            android:layout_centerHorizontal="true"
                            android:background="@color/red"

                            >

                        </View>
                </LinearLayout>


        </RelativeLayout>

</RelativeLayout>


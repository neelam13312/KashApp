<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/trans"
    android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/rel_img"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/bg_cart_circle"
                            android:backgroundTint="@color/green"
                            android:elevation="6dp"
                            android:gravity="center">

                                <ImageView
                                    android:id="@+id/iv_like"
                                    android:layout_width="26dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/like"
                                    app:tint="@color/white" />
                        </RelativeLayout>
                        <LinearLayout
                            android:background="@drawable/bg_round_with_border"

                            android:layout_marginTop="-30dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tv_luck"
                                    android:layout_marginTop="50dp"
                                    android:textSize="25sp"

                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/good_luck"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <TextView
                                    android:id="@+id/tv_bid"
                                    android:layout_marginTop="25dp"
                                    android:textSize="20sp"
                                    android:textColor="@color/dark_Green"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_marginHorizontal="10dp"
                                    android:text="@string/bids_placed_succesfully"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </TextView>

                                <Button
                                    android:id="@+id/btn_ok"
                                    android:backgroundTint="@color/dark_Green"
                                    android:padding="4dp"

                                    android:layout_marginTop="20dp"
                                    android:text="Ok"
                                    android:layout_margin="10dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="55dp">

                                </Button>
                        </LinearLayout>
                </LinearLayout>
        </LinearLayout>


</RelativeLayout>